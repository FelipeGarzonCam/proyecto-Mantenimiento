@model ProyectoMantenimiento.Dominio.Entidades.Equipo
@{
    ViewData["Title"] = "Editar Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1><i class="fas fa-tools"></i> Editar Equipo</h1>
</section>

<section class="content">
    @using (Html.BeginForm("Edit", "Equipos", FormMethod.Post, new { id = "frmEquipo" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.EquipoId)

        <div class="row">
            <div class="col-md-8">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Tarjeta maestra</h3>
                    </div>
                    <div class="card-body">

                        <div class="form-group">
                            @Html.LabelFor(m => m.CodigoInterno)
                            @Html.TextBoxFor(m => m.CodigoInterno, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CodigoInterno, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Nombre)
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Marca)
                            @Html.TextBoxFor(m => m.Marca, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Marca, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Modelo)
                            @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Modelo, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.NumeroSerie)
                            @Html.TextBoxFor(m => m.NumeroSerie, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.NumeroSerie, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.FechaAdquisicion)
                            @Html.TextBoxFor(m => m.FechaAdquisicion, "{0:yyyy-MM-dd}",
                                     new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.FechaAdquisicion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Ubicacion)
                            @Html.TextBoxFor(m => m.Ubicacion, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Ubicacion, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.PotenciaHP)
                            @Html.TextBoxFor(m => m.PotenciaHP,
                                     new { @class = "form-control", type = "number", step = "0.1" })
                            @Html.ValidationMessageFor(m => m.PotenciaHP, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Capacidad)
                            @Html.TextBoxFor(m => m.Capacidad,
                                     new { @class = "form-control", type = "number", step = "0.1" })
                            @Html.ValidationMessageFor(m => m.Capacidad, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.PesoKg)
                            @Html.TextBoxFor(m => m.PesoKg,
                                     new { @class = "form-control", type = "number", step = "0.1" })
                            @Html.ValidationMessageFor(m => m.PesoKg, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Cantidad)
                            @Html.TextBoxFor(m => m.Cantidad,
                                     new { @class = "form-control", type = "number", min = "1" })
                            @Html.ValidationMessageFor(m => m.Cantidad, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Criticidad)
                            @Html.DropDownListFor(m => m.Criticidad,
                                     new SelectList(new[] { "Crítico", "Urgente", "Normal" }, Model.Criticidad),
                                     "- Seleccione -", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Criticidad, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Descripcion)
                            @Html.TextAreaFor(m => m.Descripcion, 4, 80, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Guardar cambios" class="btn btn-warning" />
                        <a asp-action="Details" asp-route-id="@Model.EquipoId"
                           class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
