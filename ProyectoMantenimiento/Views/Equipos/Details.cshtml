@model ProyectoMantenimiento.Dominio.ViewModels.EquipoDetalleVM
@{
    ViewData["Title"] = "Detalles del equipo";
}

<div class="card">
    <!-- Encabezado del equipo -->
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">@Model.Equipo.Nombre</h5>
        <a asp-action="Edit"
           asp-route-id="@Model.Equipo.EquipoId"
           class="btn btn-warning btn-sm">
            <i class="fa fa-edit"></i> Editar
        </a>
    </div>

    <div class="card-body">
        <!-- Datos generales y hoja de vida -->
        <div class="row">
            <div class="col-md-6">
                <h6 class="text-muted">Datos generales</h6>
                <p><strong>ID:</strong> @Model.Equipo.EquipoId</p>
                <p><strong>Descripción:</strong> @Model.Equipo.Descripcion</p>
                <p><strong>Cantidad:</strong> @Model.Equipo.Cantidad</p>
            </div>
            <div class="col-md-6">
                <h6 class="text-muted">Hoja de vida</h6>
                @if (Model.HojaVida is null)
                {
                    <p class="text-danger">Sin hoja de vida registrada.</p>
                }
                else
                {
                    <p><strong>Marca:</strong> @Model.HojaVida.Marca</p>
                    <p><strong>Modelo:</strong> @Model.HojaVida.Modelo</p>
                    <p><strong>N.º Serie:</strong> @Model.HojaVida.NumeroSerie</p>
                    <p><strong>Ubicación:</strong> @Model.HojaVida.Ubicacion</p>
                    <p><strong>Responsable:</strong> @Model.HojaVida.Responsable</p>
                    <p>
                        <strong>Fecha registro:</strong>
                        @Model.HojaVida.FechaRegistro.ToString("yyyy-MM-dd")
                    </p>
                }
            </div>
        </div>

        <hr />

        <!-- Botón y contador de mantenimientos -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                Mantenimientos Realizados = @Model.ListaMantenimientos.Count()
            </h4>
            <a asp-controller="Mantenimientos"
               asp-action="Create"
               asp-route-equipoId="@Model.Equipo.EquipoId"
               class="btn btn-primary btn-sm">
                <i class="fa fa-plus"></i> Nuevo Mantenimiento
            </a>
        </div>

        <!-- (Se conserva) Título adicional de mantenimientos -->
        @* <h4>(@Model.ListaMantenimientos.Count())</h4> *@

        @if (!Model.ListaMantenimientos.Any())
        {
            <p class="text-success">Este equipo aún no tiene mantenimientos registrados.</p>
        }
        else
        {
            <table class="table table-bordered dataTables_wrapper">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Responsable</th>
                        <th>Tipo</th>
                        <th>Notas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var m in Model.ListaMantenimientos)
                    {
                        <tr>
                            <td>@m.Fecha.ToString("yyyy-MM-dd")</td>
                            <td>@m.Responsable</td>
                            <td>@m.Tipo</td>
                            <td>@m.Notas</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <!-- Pie de la tarjeta -->
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-info">
            <i class="fa fa-arrow-left"></i> Volver
        </a>
    </div>
</div>
