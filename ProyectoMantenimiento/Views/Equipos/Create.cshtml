@model ProyectoMantenimiento.Dominio.Entidades.Equipo
@{
    ViewData["Title"] = "Registrar Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Equipos <small>Nuevo</small></h1>
</section>
@if (ViewBag.ErroresBinding != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (string err in (List<string>)ViewBag.ErroresBinding)
            {
                <li>@err</li>
            }
        </ul>
    </div>
}

@if (ViewBag.ErrorAlGuardar != null)
{
    <div class="alert alert-danger">
        <strong>Error al guardar:</strong> @ViewBag.ErrorAlGuardar
    </div>
}


<section class="content">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Formulario</h3>
        </div>
        <div class="box-body">
            <!-- Único form, con Tag Helpers -->
            <form asp-action="Create" asp-controller="Equipos" method="post" class="form-horizontal">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group row">
                    <label asp-for="Nombre" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Descripcion" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Cantidad" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Cantidad" type="number" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-default">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
