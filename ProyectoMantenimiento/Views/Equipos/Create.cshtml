@model ProyectoMantenimiento.Dominio.Entidades.Equipo

@{
    ViewBag.Title = "Registrar Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="content-header">
    <h1>Equipos <small>Nuevo</small></h1>
</section>
<section class="content">
    <div class="box box-success">
        <div class="box-header with-border"><h3 class="box-title">Formulario</h3></div>
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.LabelFor(m => m.Nombre)
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Nombre)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Descripcion)
                    @Html.TextAreaFor(m => m.Descripcion, 3, 50, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cantidad)
                    @Html.TextBoxFor(m => m.Cantidad, new { @class = "form-control", type = "number" })
                </div>
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Guardar</button>
                <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
            }
        </div>
    </div>
</section>