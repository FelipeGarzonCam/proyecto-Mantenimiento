@model ProyectoMantenimiento.Dominio.Entidades.Equipo
@{
    ViewData["Title"] = "Nuevo Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1><i class="fas fa-tools"></i> Registrar Equipo</h1>
</section>

<section class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-tools"></i> Registrar Equipo</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Columna Izquierda -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CodigoInterno)
                                    @Html.TextBoxFor(m => m.CodigoInterno, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CodigoInterno)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Nombre)
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Nombre)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Marca)
                                    @Html.TextBoxFor(m => m.Marca, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Modelo)
                                    @Html.TextBoxFor(m => m.Modelo, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NumeroSerie)
                                    @Html.TextBoxFor(m => m.NumeroSerie, new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FechaAdquisicion)
                                    @Html.TextBoxFor(m => m.FechaAdquisicion, "{0:yyyy-MM-dd}",
                                             new { @class = "form-control", type = "date" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Ubicacion)
                                    @Html.TextBoxFor(m => m.Ubicacion, new { @class = "form-control" })
                                </div>
                            </div>
                            <!-- Columna Derecha -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PotenciaHP)
                                    @Html.TextBoxFor(m => m.PotenciaHP, new { @class = "form-control", type = "number", step = "0.1" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Capacidad)
                                    @Html.TextBoxFor(m => m.Capacidad, new { @class = "form-control", type = "number", step = "0.1" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.PesoKg)
                                    @Html.TextBoxFor(m => m.PesoKg, new { @class = "form-control", type = "number", step = "0.1" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Criticidad)
                                    @Html.DropDownListFor(m => m.Criticidad,
                                             new SelectList(new[] { "Crítico", "Urgente", "Normal" }),
                                             "- Seleccione -", new { @class = "form-control" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Cantidad)
                                    @Html.TextBoxFor(m => m.Cantidad,
                                             new { @class = "form-control", type = "number", min = "1" })
                                    @Html.ValidationMessageFor(m => m.Cantidad)
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Descripcion)
                                    @Html.TextAreaFor(m => m.Descripcion, 3, 60, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-save"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4 ml-2">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    }


@section Scripts {
    @* Activa validaciones lado-cliente *@
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
