@model IEnumerable<ProyectoMantenimiento.Dominio.Entidades.Mantenimiento>
@{
    Layout = null;  /* Vista limpia para impresión */
}

<!-- Incluimos Bootstrap para estilos básicos -->
<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

<style>
    /* Tipografía y márgenes */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        font-size: 12px;
    }

    /* Cabecera */
    .print-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .print-header img {
            max-height: 60px;
            margin-bottom: 10px;
        }

        .print-header h2 {
            margin: 0;
            font-size: 18px;
        }

        .print-header h4 {
            margin: 5px 0 0;
            font-size: 14px;
            font-weight: normal;
        }

    /* Tabla */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th {
        background-color: #007bff;
        color: white;
        padding: 8px;
        text-align: left;
    }

    td {
        padding: 8px;
        border-bottom: 1px solid #ddd;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="print-header">
    <!-- Logo de la empresa (ajusta la ruta si tu imagen está en otra carpeta) -->
    <img src="~/img/company-logo.png" alt="Logo Empresa" />
    <h2>Informe Mantenimiento Correctivo</h2>
    <h4>@ViewBag.Periodo</h4>
</div>

<!-- Insertamos la tabla con el formato corregido -->
@await Html.PartialAsync("~/Views/Shared/_TablaMantenimientos.cshtml", Model)
