@model ProyectoMantenimiento.Dominio.Entidades.Mantenimiento
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewBag.Title = "Nuevo mantenimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>Mantenimiento <small>Nuevo registro</small></h1>
</section>

<section class="content">
    <div class="box box-primary">
        <div class="box-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.EquipoId)

                <div class="form-group">
                    @Html.LabelFor(m => m.Fecha)
                    @Html.TextBoxFor(m => m.Fecha, "{0:yyyy-MM-dd}",
                             new { @class = "form-control", type = "date" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Responsable)
                    @Html.TextBoxFor(m => m.Responsable, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Tipo)
                    @Html.DropDownListFor(
                             m => m.Tipo,
                             (SelectList)ViewBag.Tipos,         // ← usa la lista del controlador
                             "- Seleccione -",
                             new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Tipo)
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.Notas)
                    @Html.TextAreaFor(m => m.Notas, 4, 60, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save"></i> Guardar
                </button>
                <a asp-action="Details" asp-controller="Equipos"
                   asp-route-id="@Model.EquipoId"
                   class="btn btn-default">Cancelar</a>
            }
        </div>
    </div>
</section>
