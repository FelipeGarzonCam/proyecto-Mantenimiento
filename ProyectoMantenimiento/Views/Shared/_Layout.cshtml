### Login.cshtml (en 01_Interfaz/Pages/Cuenta)
```html
@page
@model ProyectoMantenimiento.Pages.Cuenta.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="login-box">
  <div class="login-logo">
    <img src="~/images/logo.png" alt="Logo" style="max-height:80px;" />
  </div>
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Inicia sesión para comenzar</p>
      <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="input-group mb-3">
          <input asp-for="Input.UserName" class="form-control" placeholder="Usuario" />
          <div class="input-group-append">
            <div class="input-group-text"><span class="fas fa-user"></span></div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input asp-for="Input.Password" type="password" class="form-control" placeholder="Contraseña" />
          <div class="input-group-append">
            <div class="input-group-text"><span class="fas fa-lock"></span></div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <button type="button" class="btn btn-link" data-toggle="modal" data-target="#registroModal">
              Nuevo usuario
            </button>
          </div>
          <div class="col-4">
            <button type="submit" class="btn btn-primary btn-block">Entrar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal de Registro -->
<div class="modal fade" id="registroModal" tabindex="-1" role="dialog" aria-labelledby="registroModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form method="post" asp-page-handler="Registrar">
        <div class="modal-header">
          <h5 class="modal-title" id="registroModalLabel">Crear nuevo usuario</h5>
          <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
        </div>
        <div class="modal-body">
          <div asp-validation-summary="ModelOnly"></div>
          <div class="form-group">
            <label asp-for="Registro.UserName"></label>
            <input asp-for="Registro.UserName" class="form-control" />
          </div>
          <div class="form-group">
            <label asp-for="Registro.Email"></label>
            <input asp-for="Registro.Email" class="form-control" />
          </div>
          <div class="form-group">
            <label asp-for="Registro.Password"></label>
            <input asp-for="Registro.Password" type="password" class="form-control" />
          </div>
          <div class="form-group">
            <label asp-for="Registro.ConfirmPassword"></label>
            <input asp-for="Registro.ConfirmPassword" type="password" class="form-control" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-success">Registrar</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}